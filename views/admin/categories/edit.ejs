<div class="container">
    <hr>
    <div class="card">
        <h2>Edição de categoria</h2>
        <div class="card-header">
            <div class="card-body">
                <form method="POST" action="/categories/update">
                    <input type="text" name="title" class="form-control" placeholder="Defina o título da categoria" value="<%= category.title %>">
                    <input type="hidden" name="id" value="<%= category.id %>">
                    <br>
                    <button class="btn btn-success">Atualizar</button>
                </form>
            </div>
        </div>
    </div>
</div>

